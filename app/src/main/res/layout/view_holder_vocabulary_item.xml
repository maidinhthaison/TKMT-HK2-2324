<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="@dimen/_310sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="0dp"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:background="@color/white"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            tools:text="Text" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvText"
            android:layout_marginTop="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_volume_up_24" />
        <com.google.android.material.textview.MaterialTextView
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/imvSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/tvReference"
            tools:text="https://commons.wikimedia.org/w/index.php?curid=75797336"
            android:textSize="@dimen/_12sdp"
             />

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/pbVotePercent"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:indeterminateOnly="false"
                android:max="100"
                android:progress="75"
                android:progressDrawable="@drawable/circle" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvVoteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>