<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="0dp"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:background="@color/white"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.textview.MaterialTextView
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            tools:text="Text" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvText"
            android:layout_marginTop="@dimen/_5sdp"
            app:srcCompat="@drawable/ic_volume_up_24" />
        <com.google.android.material.textview.MaterialTextView
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/imvSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/tvSourceUrl"
            tools:text="https://commons.wikimedia.org/w/index.php?curid=75797336"
            android:textSize="@dimen/_12sdp" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/tvSourceUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/tvLicense"
            tools:text="License"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>